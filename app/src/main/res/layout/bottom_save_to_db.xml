<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@color/white_background"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="25dp"
        android:text="Save To Database:"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/foodies_font_1"
        android:textColor="@color/colorPrimary"
        android:textSize="21sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="The backend service used is Firebase (json)"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/foodies_font_1"
        android:textColor="#BCBCBC"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="60dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0.5dp"
            app:cardBackgroundColor="#F1F1F3"
            android:layout_height="match_parent">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                app:met_hideUnderline="true"
                android:inputType="textEmailAddress"
                android:id="@+id/save_to_db_name"
                android:imeOptions="actionDone"
                android:paddingRight="10dp"
                android:textColor="@color/third_color"
                android:hint="Name"
                android:paddingLeft="15dp"
                android:fontFamily="@font/foodies_font_1"
                android:textSize="12dp"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginVertical="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Key:"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/third_color"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="-"
            android:maxLines="1"
            android:id="@+id/save_to_db_key"
            android:ellipsize="end"
            android:fontFamily="@font/foodies_font_1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="60dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="55dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="25dp"
            android:id="@+id/save_to_db_btn"
            app:cardElevation="0.5dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="3dp"
                    android:text="Save"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>