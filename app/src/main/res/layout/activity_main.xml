<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="0.6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="150dp"
                android:layout_weight="1"
                android:id="@+id/go_to_saves_btn"
                android:padding="10dp"
                android:src="@drawable/ic_upload"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Cipher Caesar"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:fontFamily="@font/foodies_font_1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="150dp"
                android:layout_weight="1"
                android:id="@+id/refresh_btn"
                android:padding="10dp"
                android:src="@drawable/ic_refresh"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="55dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="25dp"
                android:text="Enter Your Data"
                android:maxLines="1"
                android:textAlignment="center"
                android:ellipsize="end"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="21sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Connectez-vous à votre compte"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="#BCBCBC"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="60dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="55dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0.5dp"
                    app:cardBackgroundColor="#F1F1F3"
                    android:layout_height="match_parent">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        app:met_hideUnderline="true"
                        android:inputType="text"
                        android:id="@+id/data_edit_text"
                        android:imeOptions="actionNext"
                        android:paddingRight="10dp"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:textColor="@color/third_color"
                        android:hint="Data"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/foodies_font_1"
                        android:textSize="12dp"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="25dp"
                android:text="Enter Shift"
                android:maxLines="1"
                android:textAlignment="center"
                android:ellipsize="end"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="@color/colorPrimary"
                android:textSize="21sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Connectez-vous à votre compte"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/foodies_font_1"
                android:textColor="#BCBCBC"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <LinearLayout
                    android:id="@+id/add_shift_btn"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="+"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/foodies_font_1"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    app:cardElevation="0.5dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="50dp">
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            app:met_hideUnderline="true"
                            android:inputType="number"
                            android:id="@+id/shift_edit_text"
                            android:text="0"
                            app:met_baseColor="@color/colorPrimary"
                            android:hint="5"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/remove_shift_btn"
                    android:layout_width="46dp"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/foodies_font_1"
                        android:maxLines="1"
                        android:text="-"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="23sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:id="@+id/check_layout"
                android:gravity="center"
                android:layout_height="50dp">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="30dp"
                    android:id="@+id/subtitution_radio_groupe"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:text="Encode"
                        android:id="@+id/subtitution_encode"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:layout_marginRight="70dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="match_parent">
                    </RadioButton>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:text="Decode"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:id="@+id/subtitution_decode"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="match_parent">
                    </RadioButton>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="35dp"
                android:id="@+id/result_layout"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="2dp"
                    app:cardElevation="0.5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="4dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="15dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginLeft="3dp"
                                android:text="Result:"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/third_color"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginLeft="3dp"
                                android:textAlignment="center"
                                android:layout_marginVertical="15dp"
                                android:ellipsize="end"
                                android:id="@+id/result_text"
                                android:fontFamily="@font/foodies_font_1"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="50dp">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    android:id="@+id/save_result_to_db_btn"
                                    app:cardElevation="0.5dp"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:gravity="center"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_marginLeft="3dp"
                                            android:text="Save To Database"
                                            android:textAlignment="center"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/foodies_font_1"
                                            android:textColor="@color/white"
                                            android:textSize="13sp"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_height="60dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="55dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/convert_btn"
                    app:cardElevation="0.5dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginLeft="3dp"
                            android:text="Convert"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:ellipsize="end"
                            android:fontFamily="@font/foodies_font_1"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>